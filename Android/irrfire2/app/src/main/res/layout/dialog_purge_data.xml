<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gaussian_green"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".DeviceActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerDevice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@android:color/holo_green_light"
                android:gravity="center_vertical|end" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tbMetadata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvLocationTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="40"
                android:text="Location" />

            <EditText
                android:id="@+id/tvLocation"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:inputType="text"
                android:padding="0dp"
                android:text=""
                android:textSize="14sp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvDeviceIDTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="40"
                android:text="Device ID" />

            <EditText
                android:id="@+id/tvDeviceID"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:inputType="text"
                android:padding="0dp"
                android:text="device ID"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMacAddrTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="MAC address" />

            <TextView
                android:id="@+id/tvMacAddr"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="MacAddr" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emptyText11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:inputType="none" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tbInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMeasureModeTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Keep last X days of telemetry" />

            <TextView
                android:id="@+id/tvMeasureMode"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:text="TextView"
                android:textSize="18sp" />
        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/executeButton"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:text="Execute" />


        </TableRow>

    </TableLayout>


</LinearLayout>

